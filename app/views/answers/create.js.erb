$('.new-answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.persisted? %>
  $('.answers').append('<%= content_tag :div, j(render(@answer)), class: "answer-#{@answer.id}" %>');
  $('.new-answer #answer_body').val('');
  <%= render 'shared/update_flash' %>
<% end %>
