$('<%= ".answer-#{@answer.id}" %> > .answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
  $('<%= ".answer-#{@answer.id}" %>').html('<%= j render @answer %>');
  $('.flash-messages').html('<%= render 'shared/flash' %>');
  $(".flash-alert").delay(<%= FLASH_HIDE_DELAY %>).addClass("in").fadeOut(<%= FLASH_FADEOUT_TIME %>);
<% end %>
